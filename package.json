{
  "name": "haze-search",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Self-hosted search microservice (Node/TypeScript + SQLite FTS5)",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsup src/main.ts --format esm --sourcemap",
    "start": "node dist/main.js",
    "test": "vitest run --globals",
    "test:watch": "vitest --globals",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "deps:check": "madge --circular src",
    "ci": "npm run lint && npm run typecheck && npm run test && npm run deps:check"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.2",
    "cheerio": "^1.0.0-rc.12",
    "express": "^5.2.1",
    "p-limit": "^5.0.0",
    "undici": "^6.19.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^5.0.6",
    "@types/node": "^22.10.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.23.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "madge": "^8.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.3.6",
    "tsx": "^4.20.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  }
}
